<Window x:Class="WpfPlayer.FullScreenImage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPlayer"
        mc:Ignorable="d"
        WindowStyle="None" ResizeMode="NoResize"  
    WindowStartupLocation="CenterScreen" WindowState="Maximized"
        Title="FullScreenImage" AllowsTransparency="True" MouseDown="Window_MouseDown" >
    <Window.Background>
        <SolidColorBrush Opacity="0.5" Color="#B2000000"/>
    </Window.Background>
    <Grid Margin="387,0,387,0"  Background="Transparent" >
        <Image x:Name="img1"  Height="1080" Width="1080"></Image>

        <Button Margin="1350,0,-384,969" Click="Button_Click" Content="x" Background="Transparent" BorderThickness="0,0,0,0" Foreground="White" FontSize="60" FontFamily="MS Reference Sans Serif" FontStretch="UltraCondensed" BorderBrush="#7F5B5B5B"/>
    </Grid>
</Window>
